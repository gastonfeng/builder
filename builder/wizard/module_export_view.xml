            <field name="arch" type="xml">
                <form string="Modules Export">
                    <group>
                        <group>
                            <field name="export_type"/>
                        </group>
                        <group>

                        </group>
                    </group>
                    <footer>
                        <button name="action_export" string="Export" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

